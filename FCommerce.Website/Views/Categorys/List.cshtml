@model IEnumerable<Category>



<br />
<div class="mb-3">
    <a asp-controller="Categorys" asp-action="Upsert" class="btn btn-primary text-uppercase"><i class="bi bi-plus-lg"></i> Add More</a>
</div>
@if (TempData["Sucsess"] != null)
{
    <div class="alert alert-success">
        <strong>Success !</strong> @TempData["Sucsess"]
    </div>
}
    <Table class="table table-hover table-bordered bg-warning ">
        <thead>
            <tr>
                 <th class="text-uppercase">Id </th>
                 <th class="text-uppercase">Name</th>
                 <th class="text-uppercase">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var categoryInModel in Model)
            {
                <tr>
                <td>
                    @categoryInModel.Id
                </td>
                    
                <td>
                    @categoryInModel.Name
                </td>
                <td>
                    <a class="btn btn-info text-uppercase" asp-controller="Categorys" asp-action="Upsert" asp-route-id="@categoryInModel.Id"><i class="bi bi-pencil-square"></i> Edit</a>
                    <a class="btn btn-danger text-uppercase" asp-controller="Categorys" asp-action="Delete" asp-route-id="@categoryInModel.Id"><i class="bi bi-x-octagon"></i> Delete</a>
                </td>
                </tr>
                

            }
        </tbody>
    </Table>