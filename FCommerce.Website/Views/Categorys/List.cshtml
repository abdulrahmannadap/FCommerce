@model IEnumerable<Category>

    <Table class="table table-hover table-bordered bg-warning ">
        <thead>
            <tr>
                 <th class="text-uppercase">Id </th>
                 <th class="text-uppercase">Name</th>
                 <th class="text-uppercase">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var categoryInModel in Model)
            {
                <tr>
                <td>
                    @categoryInModel.Id
                </td>
                    
                <td>
                    @categoryInModel.Name
                </td>
                <td>
                    <a class="btn btn-info " asp-controller="Categorys" asp-action="Upsert" asp-route-id="@categoryInModel.Id">Edit</a>
                    <a class="btn btn-danger " asp-controller="Categorys" asp-action="Delete" asp-route-id="@categoryInModel.Id">Delete</a>
                </td>
                </tr>
                

            }
        </tbody>
    </Table>