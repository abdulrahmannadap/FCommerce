@model IEnumerable<Product>
<br />
    <div class ="mb-3">
    <a asp-controller="Products" asp-action="Upsert" class="btn btn-primary text-uppercase"><i class="bi bi-plus-lg"></i> Add More</a>
    </div>
@if (TempData["Sucsess"] != null)
{
    <div class="alert alert-success">
        <strong>Success !</strong> @TempData["Sucsess"]
    </div>
}
<table class="table table-hover table-bordered bg-warning ">
    <thead>
        <tr>
            <th>Id</th>
            <th>Product Name</th>
            <th>Product Description</th>
            <th>Product Price</th>
            <th>Product Category</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(Product product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.ProductName</td>
                <td>@product.Description</td>
                <td>@product.ProductPrice</td>
                <td>@product.Category.Name</td>
                <td>
                    <a asp-controller="Products" asp-action="Upsert" class="btn btn-warning text-uppercase" asp-route-id="@product.Id"><i class="bi bi-pencil-square"></i> Edit</a>
                    <a asp-controller="Products" asp-action="Delete" class="btn btn-danger text-uppercase" asp-route-id="@product.Id"><i class="bi bi-x-octagon"></i> Delete</a>
                </td>
            </tr>
            
        }
    </tbody>
</table>